    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="textView_helvetica_regular" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">16sp</item>
    </style>





    <style name="Theme.MyTheme.TimePicker" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:headerBackground">#ff555555</item>
        <item name="android:numbersTextColor">@color/font_black</item>
        <item name="android:numbersInnerTextColor">@color/font_grey</item>
        <item name="android:numbersSelectorColor">@color/font_black</item>
        <item name="android:numbersBackgroundColor">#ff555555</item>

    </style>

    <style name="Widget.DottedProgressBar" parent="android:Widget" />

